{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - La boutique Francaise{% endblock %}

{% block content %}
    <h2>Je passe commande</h2>
    <p>Choisissez vos préférences avant de passer votre commande sur La Boutique Francaise.</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('order_recap')}) }}
                    {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}
                    <a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Recap de ma commande</b><br>
                <p>Retrouver tout le recap de vos produits</p>
            </div>
            <div class="order_summary">
                {% for key,product in cart %}
                    <div class="row {% if key >0 %} mt-2 {% endif%}" >
                        <div class="col-2">
                            <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="60px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br><small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            X {{ product.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
