{% extends 'base.html.twig' %}

{% block title %}Mes commandes - La boutique francaise{% endblock %}

{% block content %}
    <h2>Mes commandes</h2>
    C'est dans cet espace que vous allez avoir accès à vos commandes.
    <br>
    <a href="{{ path('account') }}" class="">Retour</a>
    {% if orders|length == 0 %}
        <hr>
        <p class="text-center">
            Vous n'avez pas encore passé de commande sur Le site de La Boutique Française.
        </p>
    {% else %}
        <table class="table mt-4">
            <thead>
            <tr>
                <th scope="col">Référence</th>
                <th scope="col">Passée le</th>
                <th scope="col">Produit(s)</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td><span class="badge badge-secondary">{{ order.reference }}</span></td>
                    <td>{{ order.createdAt|date('d/m/Y') }}</td>
                    <td>{{ order.orderDetails|length }}</td>
                    <td>{{ ((order.carrierPrice + order.getTotal)/100)|number_format(2, ',', '.') }} €</td>
                    <td class="text-right"> <a href="{{ path('account_order_show', { 'reference' : order.reference }) }}">Voir ma Commande</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}
{% endblock %}
